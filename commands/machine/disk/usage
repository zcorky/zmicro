# disk_total() {
#   local VOLUME=$(zmicro machine disk volume)
#   disk_usage=`df -h | grep $VOLUME | awk -F '[ %]+' '{print $2}'`
#   echo -e "${disk_usage}"
# }

core() {
  if [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
    help
    exit 0
  fi

  local option=$1
  case $option in
    "")
      os_disk_usage percent
      ;;
    -u | --used)
      os_disk_usage used
      ;;
    -t | --total)
      os_disk_usage total
      ;;
    -p | --percent)
      os_disk_usage percent
      ;;
    *)
      help
      ;;
  esac
}

run() {
  core $@
}

run $@
