#!/bin/bash

help() {
  echo "Usage:"
  echo "  zmicro machine disk usage [options...]"
  echo "    -t, --total   Get total disk, unit: G"
  echo "    -u, --used    Get used disk, unit: G"
  echo "    -p, --percent Get used percent"
}

