#!/bin/bash

disk_usage=$(zmicro machine disk usage)
is_health=$(zmicro machine disk healthcheck)

log_info "Disk Usage: ${disk_usage}%"

if [ "$is_health" = "true" ]; then
  log_success "Disk Healthy: True"
else
  log_error "Disk Healthy: False"
  log_error "WARN: please check your disk first"
  exit 1
fi
