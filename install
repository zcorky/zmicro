#!/bin/bash

realpath() {
  OURPWD=$PWD
  cd "$(dirname "$1")"
  LINK=$(readlink "$(basename "$1")")
  while [ "$LINK" ]; do
    cd "$(dirname "$LINK")"
    LINK=$(readlink "$(basename "$1")")
  done
  REALPATH="$PWD/$(basename "$1")"
  cd "$OURPWD"
  echo "$REALPATH"
}

export -f realpath
export CURRENT_DIR=$(realpath $(dirname "$0"))

. $CURRENT_DIR/config/config

# . $CURRENT_DIR/bin/commands/init

$CURRENT_DIR/bin/zmicro init
